<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1500dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="60dp"
                android:layout_marginTop="-50dp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/service_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_format_list"
                        android:layout_marginLeft="-256dp"
                        android:layout_marginTop="-35dp"/>

                    <EditText
                        android:id="@+id/service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="No.of Services"
                        android:layout_marginTop="-250dp"
                        android:layout_marginLeft="55dp"
                        android:textColor="#FFF"
                        android:maxLength="15"
                        />


                </com.google.android.material.textfield.TextInputLayout>


                <!--phone-->


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/vehicle_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_dvr"
                        android:layout_marginLeft="-250dp"
                        android:layout_marginTop="-35dp"/>

                    <EditText
                        android:id="@+id/vehicle_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="Type of Device"
                        android:layout_marginLeft="55dp"
                        android:textColor="#FFF"
                        android:maxLength="15"
                        />


                </com.google.android.material.textfield.TextInputLayout>


                <!--full name-->


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/asset_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/asset_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="Region/State"
                        android:layout_marginLeft="55dp"
                        android:textColor="#FFF"
                        android:maxLength="20"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_location"
                        android:layout_marginLeft="-250dp"
                        android:layout_marginTop="-35dp"/>


                </com.google.android.material.textfield.TextInputLayout>


                <!--email-->

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/device_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/device_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="Device Name"
                        android:layout_marginLeft="55dp"
                        android:textColor="#FFF"
                        android:maxLength="15"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_device_name"
                        android:layout_marginLeft="-250dp"
                        android:layout_marginTop="-35dp"/>


                </com.google.android.material.textfield.TextInputLayout>

                <!--pass-->


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/device_imei_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/device_imei_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="Site Name"
                        android:layout_marginLeft="55dp"
                        android:textColor="#FFF"
                        android:maxLength="20"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_location"
                        android:layout_marginLeft="-250dp"
                        android:layout_marginTop="-35dp"/>


                </com.google.android.material.textfield.TextInputLayout>






                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sim_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/sim_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="Email"
                        android:layout_marginLeft="55dp"
                        android:textColor="#FFF"
                        android:maxLength="30"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_email"
                        android:layout_marginLeft="-250dp"
                        android:layout_marginTop="-35dp"/>


                </com.google.android.material.textfield.TextInputLayout>





                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sim_imei_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/sim_imei_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="Mobile no"
                        android:layout_marginLeft="55dp"
                        android:textColor="#FFF"
                        android:maxLength="10"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_phone"
                        android:layout_marginLeft="-250dp"
                        android:layout_marginTop="-35dp"/>

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sim_no_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/sim_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:hint="Address"
                        android:layout_marginLeft="55dp"
                        android:textColor="#FFF"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_location"
                        android:layout_marginLeft="-250dp"
                        android:layout_marginTop="-35dp"/>
                </com.google.android.material.textfield.TextInputLayout>




                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Pinocde_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/Pincode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:hint="Pincode"
                        android:layout_marginLeft="55dp"
                        android:textColor="#FFF"
                        android:maxLength="8"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_code_black_24dp"
                        android:layout_marginLeft="-250dp"
                        android:layout_marginTop="-35dp"/>

                </com.google.android.material.textfield.TextInputLayout>






                <Button android:id="@+id/signup"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:background="@drawable/edit"
                    android:layout_marginTop="20dp"
                    android:textColor="#000"
                    android:layout_marginRight="100dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="300dp"
                    />




                <TableRow
                    android:id="@+id/hr"
                    android:layout_width="150dp"
                    android:layout_marginLeft="-250dp"
                    android:layout_marginTop="70dp"
                    android:background="#000000"
                    android:layout_height="1dp">

                </TableRow>





            </LinearLayout>

        </ScrollView>



    </FrameLayout>








</RelativeLayout>