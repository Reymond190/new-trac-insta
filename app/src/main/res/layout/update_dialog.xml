<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="5dp"
        >




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="2500dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true">




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Details"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Type:"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/VehicleType"/>


                <EditText
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="-40dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Vehicle No:"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/VehicleNo"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="130dp"
                    android:id="@+id/text1"/>

















                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Device IMEI No:"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/DeviceImei"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="130dp"
                    android:id="@+id/text2"/>









                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Device Name:"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/DeviceName"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="130dp"
                    android:id="@+id/text3"/>











                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="SIM Name:"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/SimName"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="130dp"
                    android:id="@+id/text4"/>










                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="SIM IMEI No:"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/SimImei"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="130dp"
                    android:id="@+id/text5"/>








                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="SIM No:"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/SimNo"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="130dp"
                    android:id="@+id/text6"/>











                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/Location"/>





                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="130dp"
                    android:id="@+id/text7"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Service Time:"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/ServiceTime"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="130dp"
                    android:id="@+id/text8"/>






                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Service Engineer Name:"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/ServiceEngineer"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="130dp"
                    android:id="@+id/text9"/>









                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Site Incharge Name:"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/SiteIncharge"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="130dp"
                    android:id="@+id/text10"/>






                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Authorized Person:"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/AuthorisedPerson"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="130dp"
                    android:id="@+id/text11"/>



                <Button
                    android:id="@+id/buttonUpdateArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Update" />

                <Button
                    android:id="@+id/buttonDeleteArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="-50dp"
                    android:text="Delete" />


                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"/>





            </LinearLayout>
        </ScrollView>
    </FrameLayout>




























</LinearLayout>